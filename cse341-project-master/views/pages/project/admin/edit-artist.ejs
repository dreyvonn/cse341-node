<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../../includes/project-header.ejs') %>
</head>

<body>
    <%- include('../../../includes/project-nav.ejs') %>

    <main>
        <form action="/project/admin/<% if (editing) { %>edit-artist<% } else { %>add-artist<% } %>" method="POST">
            <div>
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= artist.name %><% } %>">
            </div>
            <div>
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= artist.imageUrl %><% } %>">
            </div>
            <div>
                <label for="genre">Genre</label>
                <input type="text" name="genre" id="genre" step="0.01" value="<% if (editing) { %><%= artist.genre %><% } %>">
            </div>
            <div>
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= artist.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= artist._id %>" name="artistId">
            <% } %>

            <button type="submit" class="btn"><% if (editing) { %>Update Artistt<% } else { %>Add Artist<% } %></button>
        </form>
    </main>
</body>