<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../../includes/project-header.ejs') %>
</head>

    <body>
        <%- include('../../../includes/project-nav.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h1>Order - # <%= order._id %></h1>
                            <ul>
                                <% order.artists.forEach(a => { %>
                                    <li ><%= a.artist.name %> (<%= a.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
    </body>